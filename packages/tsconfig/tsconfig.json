{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "strictBindCallApply": true,
    "strict": true,
  },
  "include": [
    "src",
    "**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
